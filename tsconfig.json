{
  "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "outDir": "out",
      "lib": ["ES2020"],
      "sourceMap": true,
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "typeRoots": [
          "./node_modules/@types"
      ]
  },
  "exclude": [
      "node_modules",
      ".vscode-test"
  ],
  "include": [
      "src/**/*"
  ]
}