{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,  // Ensures better type checking for null values
        "moduleResolution": "node",
        "baseUrl": "./",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true, // Allows easier import of CommonJS modules
        "resolveJsonModule": true, // Enables importing JSON files
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "out",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "pg"
        ],
        "paths": {
            "@types/*": ["src/types/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
